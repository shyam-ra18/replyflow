<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyboardKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/key_background</item>
        <item name="android:textColor">#1F2937</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">2dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="KeyboardKeySpecial" parent="KeyboardKey">
        <item name="android:background">@drawable/key_special_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#374151</item>
    </style>
</resources>
